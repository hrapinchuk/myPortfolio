    <h1 style="font-size: 400%">DICE GAME</h1>
    <h2>Click to roll!</h2>
    <button id="button">Roll</button>
    <br/>
    <img src="dice1.png" alt="dice" id="image1" class="rotate" />
    <img src="dice1.png" alt="dice" id="image2" class="rotate" />
    <br/>
    <p id="message"></p>

<script>
button = document.getElementById("button");
image1 = document.getElementById("image1");
image2 = document.getElementById("image2");

// function to calculate and output roll to user
button.onclick = function () {
    var roll1 = (1 + Math.floor(6 * Math.random()));
    var roll2 = (1 + Math.floor(6 * Math.random()));
    image1.src = ("dice" + roll1 + ".png");
    image2.src = ("dice" + roll2 + ".png");
    var rollTotal = parseInt(roll1 + roll2);
    document.getElementById("message").innerHTML = ("You rolled a " + rollTotal + "!");
}

// function for dice roll animation
button.addEventListener("click", function(x) {
    x.preventDefault;
    image1.classList.remove("rotate");
    image2.classList.remove("rotate");
    image1.offsetWidth = image1.offsetWidth;
    image2.offsetWidth = image2.offsetWidth;
    image1.classList.add("rotate");
    image2.classList.add("rotate");
}, false);
</script>
